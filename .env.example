# Environment Variables

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/vet_voice_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=vet_voice_ai

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACyour_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Application Settings
SECRET_KEY=your_secret_key_here_generate_a_strong_one
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api
PROJECT_NAME=Vet Voice AI

# Voice Settings
DEFAULT_VOICE_ID=your_elevenlabs_voice_id
SPEECH_MODEL=whisper-1

# Advanced Features Configuration
PRESCRIPTION_REFILLS_ENABLED=true
EMERGENCY_TRIAGE_ENABLED=true
INSURANCE_VERIFICATION_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true

# Emergency Services
ASPCA_POISON_CONTROL_NUMBER=(888) 426-4435
EMERGENCY_TRANSFER_ENABLED=true

# LLM Settings
DEFAULT_LLM_PROVIDER=openai  # or anthropic
GPT_MODEL=gpt-4-1106-preview
CLAUDE_MODEL=claude-3-sonnet-20240229

# Development
DEBUG=true
ENVIRONMENT=development
